<div class="container">
  <div class="row mt-5 align-items-end">
    <h1 class="font-weight-bold">商品一覧</h1>
      <h3 class="ml-3">
        全<%= @items.count %>件
      </h3>
  </div>
  <div class="row mt-5">
    <% @items.each do |item| %>
      <div class="col-lg-3 col-md-6 mb-4">
        <%= link_to item_path(item.id)  do %>
          <%= image_tag item.image, :size => "250x250" %>
        <% end %>
        <%= item.name %><br/>
        ¥<%= item.price.to_s(:delimited) %>円
      </div>
    <% end %>
  </div>
  <div class="col-lg-2 offset-lg-5"><%= paginate @items %></div>
</div>
