<div class="container">
  <div class="row mt-3">
    <div class="col-3 mt-3 mb-3">
      <h5 class="text-center bg-light">マイページ</h5>
    </div>
  </div>

  <div class="row">
    <h5 class="font-weight-bold">登録情報</h5>
    <div class="offset-1">
     <%= link_to "編集する", edit_users_path(@end_user), class: "btn btn-sm btn-success" %>
    </div>
  </div>
<div class="row mt-2 mb-4">
  <table class="table-bordered col-6">
    <tr>
      <th class="bg-light" style="width: 30%">氏名</th>
      <td><%= @end_user.last_name %><%= @end_user.first_name %></td>
    </tr>
    <tr>
      <th class="bg-light">カナ</th>
      <td><%= @end_user.last_name_kana %><%= @end_user.first_name_kana %></td>
    </tr>
    <tr>
      <th class="bg-light">郵便番号</th>
      <td><%= @end_user.post_code %></td>
    </tr>
    <tr>
      <th class="bg-light">住所</th>
      <td><%= @end_user.address %></td>
    </tr>
    <tr>
      <th class="bg-light">電話番号</th>
      <td><%= @end_user.phone_number %></td>
    </tr>
    <tr>
      <th class="bg-light">メールアドレス</th>
      <td><%= @end_user.email %></td>
    </tr>
  </table>
</div>
<div class="row">
 <h5 class="font-weight-bold">配送先</h5>
 <div class="offset-1">
 <%= link_to "一覧を見る", addresses_path, class: "btn btn-sm btn-primary" %>
 </div>
</div>

<div class="row mt-2">
 <h5 class="font-weight-bold">注文履歴</h5>
 <div class="offset-1">
 <%= link_to "一覧を見る", orders_path, class: "btn btn-sm btn-primary" %>
 </div>
</div>