
<% if @shipping_address.errors.any? %>
  <%= @shipping_address.errors.count %>件が未入力です！！！
  <ul>
    <% @shipping_address.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-2 mb-5 offset-1">
      <h5 class="text-center bg-light mt-5 font-weight-bold">配送先編集</h5>
   </div>
 </div>

 <div class="row">
    <div class="col-12 mb-5">
      <%= form_with(model:@shipping_address, url:address_path)do |f| %>
        <div class="form-group col-xs-9">
            <%= f.label :post_code, "郵便番号(ハイフンなし)" %>
            <%= f.text_field :post_code, autofocus: true, :placeholder => "4001114" %>
          </div>
          <div class="form-group col-xs-9">
          <%= f.label :住所 %>
          <%= f.text_field :address, autofocus: true, :placeholder => "山梨県甲府市4-5-19" %>
        </div>
        <div class="form-group col-xs-9">
          <%= f.label :宛名 %>
          <%= f.text_field :address_name, autofocus: true, :placeholder => "令和道子" %>
          <%= f.submit "変更内容を保存" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
