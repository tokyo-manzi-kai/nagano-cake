
<div class="container">
  <div class="row mt-4">
    <div class="col-3 mt-3 mb-3">
      <h5 class="text-center bg-light">注文情報入力</h5>
    </div>
    <div class="col-12">
      <%= form_with model: @order, url: orders_comfilm_orders_path do |f| %>
        <h5>支払い方法</h5>
        <div class="row">
            <div class="col-1"></div>
                 <div class="col-8">
                 <%= f.radio_button :method_of_payment, Order.method_of_payments.key(0) %>
                 <%= f.label :クレジットカード, Order.method_of_payments_i18n[:credit_card] %>
            </div>
        </div>
        <div class="row">
            <div class="col-1"></div>
                <div class="col-8">
                <%= f.radio_button :method_of_payment, Order.method_of_payments.key(1) %>
                <%= f.label :銀行振込, Order.method_of_payments_i18n[:transfer]%>
                </div>
        </div>
        <h5>お届け先</h5>
        <div class="row">
            <div class="col-1"></div>
                <div class="col-8">
                <%= f.radio_button :address_option, "0" %>
                <%= f.label :address_option, 'ご自身の住所' %>
                </div>
        </div>
        <div class="row">
            <div class="col-1"></div>
                <div class="col-8">
                〒<%= @end_user.post_code %>
                <%= @end_user.address %>
                </div>
        </div>
        <div class="row">
            <div class="col-1"></div>
                <div class="col-8">
                <%= @end_user.last_name %>
                <%= @end_user.first_name %>
                </div>
        </div>
        <div class="row mt-3">
            <div class="col-1"></div>
                <div class="col-8">
                <%= f.radio_button :address_option, "1" %>
                <%= f.label :shipping_address, '登録先住所から選択' %>
                </div>
        </div>
        <div class="row">
            <div class="col-1"></div>
                <div class="col-8">
                <%= f.select :address_id, options_from_collection_for_select(@end_user.shipping_addresses.all, :id, :address), class:"form-control" %>
                </div>
        </div>
        <div class="row mt-3">
            <div class="col-1"></div>
                <div class="col-8">
                <%= f.radio_button :address_option, "2" %>
                <%= f.label :shipping_address, '新しいお届け先' %>
                </div>
        </div>
        <div class="row">
            <div class="col-1"></div>
                <div class="col-8">
                <%= f.label :post_code, "郵便番号（ハイフンなし）" ,class:"col-4" %>
                <%= f.text_field :post_code,:placeholder => "0000000" %>
                </div>
        </div>
        <div class="row">
            <div class="col-1"></div>
                <div class="col-8">
                <%= f.label :address, "住所" ,class:"col-4" %>
                <%= f.text_field :address,:placeholder => "東京都渋谷区代々木神園町0-0" ,class:"col-6 pl-0" %>
                </div>
        </div>
        <div class="row">
            <div class="col-1"></div>
                <div class="col-8">
                <%= f.label :name, "宛名"  ,class:"col-4" %>
                <%= f.text_field :name,:placeholder => "令和道子"%>
                </div>
        </div>
        <div class="text-center">
            <%= f.submit "確認画面へ進む",class: "btn btn-sm btn-primary mt-5" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
