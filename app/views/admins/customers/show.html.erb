<div class="container">

  <div class="row">
    <div class="col-3 mb-5">
      <h5 class="text-center bg-light mt-5"><%= @end_user.last_name %><%= @end_user.first_name %>さんの会員詳細</h5>
   </div>
 </div>

  <div class="row">
    <div class="col-8 mb-2">
      <table class="table">

        <tr>
          <th>会員ID</th>
        <th><%= @end_user.id %></th>
        </tr>
        <tr>
          <th>氏名</th>
          <th><%= @end_user.last_name %> <%= @end_user.first_name %></th>
        </tr>
        <tr>
          <th>フリガナ</th>
          <th><%= @end_user.last_name_kana %> <%= @end_user.first_name_kana %></th>
        </tr>
        <tr>
          <th>郵便番号</th>
          <th><%= @end_user.post_code %></th>
        </tr>
        <tr>
          <th>住所</th>
          <th><%= @end_user.address %></th>
        </tr>
        <tr>
          <th>電話番号</th>
          <th><%= @end_user.phone_number %></th>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <th><%= @end_user.email %></th>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <th>
            <%if @end_user.is_deleted == false %>
             <p class="text-success">有効</p>
            <% else %>
             <p class="text-secondary">退会済</p>
            <% end %>
          </th>
        </tr>
      </table>
    </div>


      <div class="col-12">
        <tr class="text-center">
          <th><%= link_to "編集する",edit_admins_customer_path, class: "btn btn-success offset-4" %></th>
          <th><%= link_to "注文履歴一覧を見る",admins_customer_index_path, class: "btn btn-primary offset-1" %></th>
        </tr>

      </div>
  </div>
</div>