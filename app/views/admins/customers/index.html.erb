<div class="container">

  <div class="row">
    <div class="col-3 mb-5">
      <h5 class="text-center mt-5" style="background-color: #EEEEEE">会員一覧</h5>
   </div>
 </div>

  <div class="row">
    <div class="col-12 mb-5">
      <table class="table">
          <thead>
              <tr class="bg-light">
                  <th>会員ID</th>
                  <th>氏名</th>
                  <th>メールアドレス</th>
                  <th>ステータス</th>
              </tr>
          </thead>
          <tbody>
            <% @end_users.each do |end_user| %>
              <tr>
                  <td><%= end_user.id %></td>
                  <td>
                    <%= link_to admins_customer_path(end_user), class: "text-dark", style: "text-decoration: underline;" do %>
                     <%= end_user.last_name %><%= end_user.first_name %>
                    <% end %>
                  </td>
                  <td><%= end_user.email %></td>
                  <td>
                    <%if end_user.is_deleted == false %>
                      <span class="text-success font-weight-bold">有効</span>
                    <% else %>
                      <span class="text-secondary font-weight-bold">退会済</span>
                    <% end %>
                  </td>
              </tr>
            <% end %>
          </tbody>
      </table>
      <div><%= paginate @end_users %></div>
    </div>
  </div>

</div>
