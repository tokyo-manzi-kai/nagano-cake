<div class="container">
  <div class="row">
    <h3 class="p-3"><span class="header"><%= @customer.family_name + @customer.first_name %>さんの注文履歴</span></h3>
  </div>

  <div class="row">
    <div class="col-10 offset-1">
      <table class="table table-hover">
        <thead class="table-active">
          <tr>
            <th class="pl-5">購入日時</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td class="pl-5"><u><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order.id), class: "text-dark"%></u></td>
              <td>
                <%= order.order_details.sum(:quantity) %>
              </td>
              <td><%= order.status_i18n %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row justify-content-center">
    <div>
     <%= paginate @orders %>
    </div>
  </div>
</div>