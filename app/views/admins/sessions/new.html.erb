<div class='container'>
  <div class='row mt-3'>
    <div class="bg-light col-md-4 m-4 text-center">
      <h4>管理者用ログイン</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8 mx-auto">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    　　<!--メールアドレス-->
        <div class="row form-group">
          <%= f.label :email, "メールアドレス", class: "col-md-4 col-form-label" %>
          <%= f.email_field :email, autofocus: true, :placeholder => "sample@example.com", class: "form-control col-md-8" %>
        </div>

        <!--パスワード-->
        <div class="row form-group mt-3">
          <%= f.label :password, "パスワード", class: "col-md-4 col-form-label" %>
          <%= f.password_field :password, autocomplete: "off", class: "form-control col-md-8" %>
        </div>

        <!--ボタン-->
        <div class="actions my-4">
          <%= f.submit "ログイン", class: 'btn btn-sm btn-primary col-md-3 offset-md-4'%>
        </div>

      <% end %>
    </div>
  </div>
</div>