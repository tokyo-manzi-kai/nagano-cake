
<% if @genre.errors.any? %>
  <%= @genre.errors.count %>件が未入力です！！！
  <ul>
    <% @genre.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">

  <div class="row">
    <div class="col-3 mb-5">
      <h5 class="text-center bg-secondary text-light mt-5">ジャンル一覧・追加</h5>
    </div>
  </div>

  <div class="row">
    <div class="col-5 mb-5">
      <%= form_with model: @genre, url: admins_genres_path, local: true do |f| %>
        <%= f.label :ジャンル名, class: "font-weight-bold" %>
        <%= f.text_field :genre_name, placeholder: "ジャンル名", class: "offset-1" %>
        <%= f.submit "新規登録", class: "btn btn-success offset-1" %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-5 mb-5">
      <table class="table ">
        <thead>
          <tr class="bg-light">
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.genre_name %></td>
              <td><%= link_to "編集する", edit_admins_genre_path(genre), class: "btn btn-success offset-6" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>